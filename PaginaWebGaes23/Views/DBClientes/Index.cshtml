@model IEnumerable<PaginaWebGaes23.Models.DBClientesDROP>

@{
    ViewBag.Title = "Administrar Información de Clientes";
    Layout = "~/Views/Shared/_LayoutAdmon.cshtml";
}

<h2>Administrar Información de Clientes</h2>

<p>
    <a href="@Url.Action("Create", "DBClientes")" class="btn btn-primary">Crear Clientes</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdDocumento)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IdDocumento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombres)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Apellidos)
    </td>
    <td>
        @Html.ActionLink("Actualizar", "Edit", new { id = item.IdDocumento }, new {@class="btn btn-success"}) 
        @Html.ActionLink("Consultar", "Details", new { id = item.IdDocumento }, new {@class="btn btn-info"}) 
        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdDocumento }, new {@class="btn btn-danger"})
    </td>
</tr>
}

</table>
